        yield from client.send_message(message.channel, msg)

    if message.content.lower().startswith('ah'):
        msg = 'b'
        yield from client.send_message(message.channel, msg)

    if message.content in ['>help']:
        msg = '<@369527523219996674> AL√àDE !!!'
        yield from client.send_message(message.channel, msg)
        sleep(3)
