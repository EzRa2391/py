        player.Start()

    if message.content.lower().endswith('quoi'):
        msg = 'feur ! :man_getting_haircut:'
        yield from client.send_message(message.channel, msg)

    if message.content.endswith('hein'):
        msg = 'deux'
        yield from client.send_message(message.channel, msg)

    if message.content.lower() in ['deux','2']:
        msg = 'trois'
        yield from client.send_message(message.channel, msg)

    if message.content.lower() in ['trois','3']:
